    color: rgba(255, 255, 255, 0.7);
    font-weight: 300;
  }

  @media (max-width: 768px) {
    .shining-text {
      font-size: 4rem;
    }
    .tagline {
      font-size: 1.8rem;
    }
    .sub-tagline {
      font-size: 1rem;
      padding: 0 1rem;
    }
    .cta-group {
      flex-direction: column;
      padding: 0 2rem;
      gap: 1rem;
    }
    .cta-button {
      width: 100%;
      justify-content: center;
    }
  }
</style>
